<div class="relative min-h-screen overflow-hidden bg-gray-900 lg:bg-gray-300">
	<div class="hidden lg:block absolute scroll"
		style="height: 400%; width: 400%; top: -25%; left: -100%; background-size: 800px auto; background-image: url('/assets/images/backgrounds/corn-collage.jpg');">
	</div>
	<div class="relative min-h-screen lg:min-w-3xl xl:min-w-4xl lg:flex lg:items-center lg:justify-center lg:w-3/5 lg:py-20 lg:pl-8 lg:pr-8 bg-no-repeat"
		style="background-size: 100% auto; background-position: -5px -5px; background-image: url('/assets/images/backgrounds/angled.svg');">
		<div>
			<div class="px-6 pt-8 pb-12 md:max-w-3xl md:mx-auto lg:mx-0 lg:max-w-3xl lg:pt-0 lg:pb-16">
				<div class="flex items-center justify-between">
					<div>
						<LinkTo @route="index">
							<img class="h-6 lg:h-8 xl:h-9" src="/assets/images/icons/logo.jpg" alt="CornCalc Logo" />
						</LinkTo>
					</div>
					<div>
					</div>
				</div>
			</div>
			<div class="px-6 md:max-w-3xl lg:max-w-3xl md:mx-auto lg:mx-0">
				<p class="text-sm font-semibold text-gray-300 uppercase tracking-wider">
					Its Finally Here!
				</p>
				<h1
					class="mt-3 text-2xl leading-9 font-semibold font-display text-white xs:text-3xl sm:mt-6 sm:text-4xl sm:leading-10 xl:text-5xl xl:leading-none"
				>
					<span class="block">Corn Calculator</span>
					<span class="block text-teal-400 text-xl xs:text-2xl sm:text-3xl xl:text-5xl">
						Know your worth ðŸ‘‘
					</span>
				</h1>
				<p class="my-4 text-lg leading-7 text-gray-300 sm:text-xl sm:max-w-xl xl:text-2xl xl:max-w-2xl">
					For farmers everywhere....
				</p>
				<div class="mt-6 sm:flex sm:mt-8 xl:mt-12">
					{{#if this.done}}
						<div>
							<p
								class="my-2 text-lg leading-7 text-gray-300 sm:text-xl sm:max-w-xl xl:text-2xl xl:max-w-2xl">
								{{this.message}}
							</p>
						</div>
					{{else}}
						<div class="rounded-md shadow-sm">
							<Input disabled="true" readonly="true" id="cost" type="text" placeholder="Enter Cost" @value={{this.cost}}
								class="form-input block w-full h-full pl-3 pr-12 sm:text-sm sm:leading-5" />
						</div>
						<div class="rounded-md shadow-sm mx-0 my-2 sm:mx-2 sm:my-0">
							<Input id="bags" type="number" placeholder="Enter Number of Bags" @value={{this.bags}}
								class="form-input block w-full h-full pl-3 pr-12 sm:text-sm sm:leading-5" />
						</div>
						<button {{on "click" this.calculate}} type="submit"
							class="mt-2 sm:mt-0 w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 border border-transparent text-base leading-6 font-semibold rounded-md text-white bg-gray-800 shadow-sm hover:bg-gray-700 focus:outline-none focus:bg-gray-700 transition ease-in-out duration-150 xl:text-lg xl:py-4">
							Calculate
						</button>
					{{/if}}
				</div>
			</div>
			<div class="mt-8 sm:mt-12 relative h-64 overflow-hidden bg-gray-300 lg:hidden">
				<div class="absolute scroll"
					style="height: 800%; width: 400%; top: -100%; left: -100%; background-size: 400px auto; background-image: url('/assets/images/backgrounds/hero-pattern.png');">
				</div>
			</div>
		</div>
	</div>
</div>